{# Renders all database entities of a certain type.
    
    Assumes that the objects stored in data are propel objects, or, more specifically
    implement a getId method for highlighting 
 #}

{% extends 'DTAMetadataBundle:Layout:base.html.twig' %}
{% import "DTAMetadataBundle:form:buildingBlocks.html.twig" as dta %}

{% block title %} Zeige: {{ className|trans }} {% endblock %}

{% block core %}

{# dta-data-listing: The sidebar is overflown if the table is too wide, so add scrollbars. #}
<div class="span12 dta-data-listing">

    <h3>{{ className|trans }}
        {# add entity button  #}
        <a class="btn btn-mini listView-add-button pull-right" href="{{ path(package~'_genericCreateOrEdit', {'package':package, 'className':className}) }}">
            <i class="icon-plus"></i>
            {{ className|trans~"listView.add.row.buttonSuffix"|trans }}
        </a>
    </h3>
    
    <table class="table table-striped table-hover" {# style="table-layout: fixed" #} > {# further bootstrap table classes: table-hover #}
        
        <thead>
            {% for col in columns %}    
                <th> {{ col|trans }} </th>
            {% endfor %}
            <th style="width:180px">Datensatz bearbeiten{#{ "listView.editColumn.caption"|trans }#}</th>
        </thead>
        
        <tbody>
        {% for datum in data %}
            {# all propel objects implement this method #}
            {% set recordId = attribute(datum, "getId") %}
            {# highlight affected record #}
            <tr {% if recordId == updatedObjectId %}class="success"{% endif %}>
            
            {% for col in columns %}
                <td>
                    {{ datum.getAttributeByTableViewColumName(col) }}
                </td>
            {% endfor %}
                {# Display edit buttons instead of Ids #}
                <td>
                    <a name="record{{recordId}}" 
                       class="glyphicon glyphicon-edit" 
                       href="{{ path(package~'_genericCreateOrEdit', {'package':package, 'className':className, 'recordId':recordId}) }}">
                        {{ "listView.edit.row.buttonSuffix"|trans }}</a>
                    <a href="{{path(package~'_deleteRecord', {'package':package, 'className':className, 'recordId':recordId })}}" 
                       title="Den Datensatz {{recordId}} wirklich löschen?"
                       class="confirmClick glyphicon glyphicon-trash">
                        löschen {#className|trans~#}
                    </a>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>
    
</div>

{% import "DTAMetadataBundle:form:buildingBlocks.html.twig" as dta %}


<!--/span-->

