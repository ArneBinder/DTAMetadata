<!DOCTYPE html><html lang="de">
    
    <head>
        {% include("DTAMetadataBundle::head.html.twig") %}
        <style type="text/css">
            form{
                width: 800px;
                margin-left: -350px;
                left: 50%;
                position: relative;
            }
        </style>
    </head>
    
    <body style="min-width: 900px; padding-top: 60px">

        
        {#
            If you want to control the URL the user is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        {% if error %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            Anmeldung fehlgeschlagen.
        </div>
        <br/>
        {% endif %}

        <form action="{{ path('login_check') }}" method="post" class="form-horizontal">

            {% set labelCols = 2 %}
            {% set controlCols = 6 %}

            <div class="form-group">
                <label for="username" class="control-label col-lg-{{labelCols}}"></label>
                <a class="navbar-brand" href="{{ path('home') }}">
                    DTA Projektdatenbank
                </a>
            </div>
            <div class="form-group">
                <label for="username" class="control-label col-lg-{{labelCols}}">Benutzername</label>
                <div class="col-lg-{{controlCols}}">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="control-label col-lg-{{labelCols}}">Passwort</label>
                <div class="col-lg-{{controlCols}}">
                    <input type="password" id="password" name="_password" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-{{labelCols}} col-lg-{{controlCols}}">
                    <input type="submit" value="Anmelden" class="btn btn-default"/>
                </div>
            </div>
        </form>
            
                    
        <!-- Placed at the end of the document so the pages load faster -->
        {#<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>#}
        {#<script src="{{ asset('js/jquery.min.js') }}"></script>#}
        {#<script src="{{ asset('js/jquery-ui.min.js') }}"></script>#}
        
        <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
        <script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
        
        <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
        
    </body>
</html>