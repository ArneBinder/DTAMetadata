function checkAllGnd(){
    var gndElements = document.getElementsByClassName("gndValue");
    for (var i = 0; i < gndElements.length; i++) {
        updateGndCheckAjax(gndElements[i]);
    }
}

function updateGndCheckAjax(gndElement){
    var gnd = gndElement.textContent;
    jQuery.ajax({
        type: "GET",
        url: "{{ path('Data_ajaxCheckGnd') }}"+"/"+gnd,
        success: function(response){
            console.log(gnd+": "+response);
            if (response != 404) {
                gndElement.style.color = "lime";
                gndElement.setAttribute('href', "http://d-nb.info/gnd/"+gnd+"/about/html");
            }else{
                gndElement.removeAttribute('href');
                gndElement.style.color = "red";
            }
        }
    });
}

