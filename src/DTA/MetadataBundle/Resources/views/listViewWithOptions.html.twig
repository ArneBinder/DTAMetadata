{% extends 'DTAMetadataBundle:Layout:base.html.twig' %}
{% import "DTAMetadataBundle:Form:buildingBlocks.html.twig" as dta %}

{% block title %} Zeige: {{ className|trans }} {% endblock %}

{% block core %}
{# dta-data-listing: The sidebar is overflown if the table is too wide, so add scrollbars. #}
<div class="col-md-9 dta-data-listing">
    <!-- the containing div is generated by the listViewWithOptions.html.twig template. -->

    {% block preTable %}
    

    
    {% endblock preTable %}
    
        {% block tableHead %}
        <table class="table fullyFeatured table-striped table-hover" id="datatable"{# style="table-layout: fixed" #} >
        <thead>
            <th> ID </th>    
            {% for col in columns %}    
                <th> {{ col|trans }} </th>    
            {% endfor %}    
        </thead>
        {% endblock tableHead %}
        
        <tbody>
        {% spaceless %}
        {% block tableBody %}
        {% endblock tableBody %}
        </tbody>
        </table>
        {% endspaceless %}
</div>
<div class="col-md-3 dta-data-options">
    <h3> {{ title|default(className|default('Listview'))|trans }}
        {#{% set publicationType = className != 'Publication'?className:'Book' %}#}
        <a class="btn btn-mini listView-add-button pull-right" href="{{ newEntityLink }}" class="btn btn-default btn-sm">
            <i class="icon-plus"></i>
            neu anlegen
        </a>
    </h3>
    <div class="well" id="publicationOptions">
        <h4> Auf ein {{ className|trans }} klicken, um Informationen anzuzeigen. </h4>
    </div>
    {% if className == 'Person' %}
    <button type="button" onclick="checkAllGnd()">Teste GNDs</button>
    {% endif %}
</div>
{% endblock core %}

{% block additionalJS %}

// this script block is produced by the listViewWithOptions.html.twig template

var optionsPanel;
var linkTemplate = "{{optionsLinkTemplate}}";

// updates the option panel to show the options for the record with the selected id
function updateOptionsPanel(id){
    
    var controlsUrl = linkTemplate.replace("__id__", id);
    
    $.get(controlsUrl, function(data){
        optionsPanel.html(data);
        optionsPanel.show();
    }); 
}

function recordClicked(){

    var rowData = dataTable.row( this ).data();// fnGetData( this );
    console.log(rowData);
    var id = rowData[0];
    updateOptionsPanel(id);

}
var dataTable;
$(document).ready(function() {
    
    optionsPanel = $('#publicationOptions');
    
    // make table rows clickable
    $('table.table').on("click", "tr", recordClicked);
    
