                    <a class="btn btn-mini listView-add-button" href="{{ path(package~'_genericNew', {'package':package, 'className':className}) }}">
                        <i class="icon-pencil"></i>
                        {{ className|trans~"listView.add.row.buttonSuffix"|trans }}
                    </a>
            </td></tr> #}

